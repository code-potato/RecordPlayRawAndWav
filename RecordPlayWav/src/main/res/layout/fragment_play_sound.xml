<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.codepotato.controller.PlaySound$PlaceholderFragment">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RecordMain_play_recorded_audio"
            android:id="@+id/button"
            android:layout_marginLeft="51dp" android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="104dp" android:onClick="toggleAudio"/>
    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restartAudio"
            android:id="@+id/start_over"
            android:layout_marginRight="70dp" android:layout_below="@+id/button" android:layout_alignEnd="@+id/button"
            android:layout_marginTop="36dp" android:clickable="true" android:onClick="restartPlayback"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="convert export"
            android:id="@+id/button2" android:layout_alignParentBottom="true" android:layout_alignEnd="@+id/button"
            android:layout_marginRight="29dp" android:layout_marginBottom="98dp" android:onClick="exportWav"/>
</RelativeLayout>
