<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepotato.controller.RecordMain"
    tools:ignore="MergeRootFrame" >
    <ToggleButton
            android:layout_width="97dp"
            android:layout_height="83dp"
            android:id="@+id/recordButton" android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="60dp" android:background="@drawable/record_button"
            android:onClick="toggleRecording" android:checked="false" android:clickable="false" android:textOff=" "
            android:textOn=" "/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="92dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="00:00"
            android:id="@+id/stopwatch" android:layout_gravity="center_horizontal|top" android:textSize="86dp"
            android:textStyle="bold" android:layout_marginTop="60dp"/>
</FrameLayout>
